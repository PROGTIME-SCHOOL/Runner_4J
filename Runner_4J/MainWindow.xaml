<Window x:Class="Runner_4J.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Runner_4J"
        mc:Ignorable="d"
        Title="Runer" Height="450" Width="800">
    <Canvas Name="myCanvas" Focusable="True" Background="LightBlue"
            KeyDown="myCanvas_KeyDown" KeyUp="myCanvas_KeyUp">

        <Rectangle Name="background" Height="400" Width="1262" Fill="Orange"
                   Canvas.Left="0"/>
        
        <Rectangle Name="background2" Height="400" Width="1262" Fill="LightGreen"
                   Canvas.Left="1262"/>

        <Rectangle Name="ground" Height="32" Width="800" Fill="Black" 
                   Canvas.Top="390" Canvas.Left="0"/>

        <Rectangle Name="player" Height="99" Width="67" Fill="Brown" 
                   Canvas.Top="150" Canvas.Left="100"/>

        <Rectangle Name="obstacle" Height="180" Width="50" Fill="Red" 
                   Canvas.Top="320" Canvas.Left="700"/>

        <Label Name="scoreText" Content="Score: 0" FontSize="20" FontWeight="Bold"/>

    </Canvas>
</Window>
